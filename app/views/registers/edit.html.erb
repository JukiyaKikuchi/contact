<div class='new-main'>
  <%# フォーム %>
  <div class='form'>
    <%# フォームのヘッダー表示 %>
    <div class='form-top'>
      <div class='form-top-title'>
        全体のお知らせ
      </div>
    </div>

    <%# フォームのメイン部分 %>
    <div class='form-main'>
      <%= form_with model: @register, local: true do |form| %>
      <%= render 'shared/error_messages', model: form.object %>
        <div class='input-items'>
          <div class='input-items__title'>
            <%= form.text_field :title, placeholder: "タイトル" %>
          </div>
          <div class='input-items__content'>
            <%= form.text_area :general_comment, placeholder: "お知らせ" %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
               <label class="form-text">画像</label>
            </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= form.file_field :image, id:"item-image" %>
          </div>
        </div>
          <div class='input-items__submit'>
            <%= form.submit 'POST'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>